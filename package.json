{
  "name": "urlify",
  "version": "1.0.0",
  "description": "turns an object into a query string",
  "main": "lib/index.js",
  "types" : "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LorneBarnaby/urlify.git"
  },
  "keywords": [
    "url",
    "query",
    "string"
  ],
  "author": "Lorne Barnaby",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/LorneBarnaby/urlify/issues"
  },
  "homepage": "https://github.com/LorneBarnaby/urlify#readme",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "jest": "^25.1.0",
    "mocha": "^7.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
